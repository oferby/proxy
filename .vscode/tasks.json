{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "${file}",
                "*.cpp", 
                "*.h", 
                "network/tcp/*.cpp", 
                "network/tcp/*.h",
                "network/*.h",
                "network/*.cpp",
                "proxy/*.h",
                "proxy/*.cpp",
                "-levent",
                "-lpthread",
                "-levent_pthreads",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}